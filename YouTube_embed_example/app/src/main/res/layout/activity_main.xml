        android:layout_marginTop="32dp" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/y_view"
        android:layout_width="361dp"
        android:layout_height="235dp"

        android:layout_marginTop="16dp" />




</RelativeLayout>
